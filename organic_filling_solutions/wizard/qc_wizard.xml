<?xml version="1.0"?>
<odoo>
    <record id="view_qc_wizard_form" model="ir.ui.view">
        <field name="name">qc.wizard.form</field>
        <field name="model">qc.wizard</field>
        <field name="arch" type="xml">
            <form string="QC Wizard">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel" data-hotkey="z"/>
                    <button string="Print Report" name="action_print_report"
                            type="object"
                            class="btn btn-primary"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>